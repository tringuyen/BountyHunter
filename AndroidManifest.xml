<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.bountyhunter" android:versionCode="1" android:versionName="1.0.0">
    <uses-sdk android:minSdkVersion="8" />
 
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application android:icon="@drawable/icon" android:debuggable="true" android:label="@string/app_name"
    android:theme="@android:style/Theme.Light">
    	
    	<activity android:name=".BountyHunter" android:label="@string/app_name">
      		<intent-filter>
	        	<action android:name="android.intent.action.MAIN" />
	        	<category android:name="android.intent.category.LAUNCHER" />
	      	</intent-filter>
	    </activity>
	    
	    <activity android:name=".BountyLocation" android:label="@string/app_name">
      		<intent-filter>
	        	<action android:name="android.intent.action.MAIN" />
	        	<category android:name="android.intent.category.ALTERNATIVE" />
	      	</intent-filter>
	    </activity>
	    
	    <activity android:name=".BountyMap" android:label="@string/app_name">
      		<intent-filter>
	        	<action android:name="android.intent.action.MAIN" />
	        	<category android:name="android.intent.category.ALTERNATIVE" />
	      	</intent-filter>
	    </activity>
	    
	   	<activity android:name=".BountyRoom" android:label="@string/app_name">
      		<intent-filter>
	        	<action android:name="android.intent.action.MAIN" />
	        	<category android:name="android.intent.category.ALTERNATIVE" />
	      	</intent-filter>
	    </activity>
	    
	    <uses-library android:required="true" android:name="com.google.android.maps"></uses-library>
	    
 	</application>
    
  
</manifest>